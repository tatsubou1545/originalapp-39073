<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
      新規ユーザー情報入力
    </h2>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) ユーザー太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ユーザーのプロフィール</label>
      <span class="indispensable">任意</span>
    </div>
    <%= f.text_area :user_profile, class:"input-default", id:"user_profile", placeholder:"ご登録されるユーザーのプロフィールをご記載ください" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">飼っている犬種</label>
      <span class="indispensable">任意</span>
    </div>
    <%= f.text_field :dog_breed, class:"input-default", id:"dog_breed", placeholder:"例) トイプードル", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">飼育頭数</label>
      <span class="indispensable">任意</span>
    </div>
    <%= f.text_field :dog_number, class:"input-default", id:"dog_number", placeholder:"例) 2", maxlength:"3" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">飼犬の生年月日</label>
      <span class="indispensable">任意</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :dog_birthday,
                    class:'select-birth',
                    id:"dog_birthday",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">飼犬のプロフィール</label>
        <span class="indispensable">任意</span>
      </div>
    <%= f.text_area :dog_profile, class:"input-default", id:"dog_profile", placeholder:"例) かわいい家族です。" %>
  </div>


  <div class="form-group">
    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>
  </div>
</div>
<% end %>
