<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap-registration'>
  <div class='form-header-registration'>
    <h3 class='form-header-text-registration'>
      新規ユーザー情報入力
    </h3>
  </div>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group-registration">
    <div class="form-group-registration-box">
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"例) ユーザー太郎", maxlength:"40" %>
    </div>
    <div class="form-group-registration-box">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group-registration-box">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group-registration-box">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="form-group-registration-box">
      <div class='form-text-wrap'>
        <label class="form-text">ユーザーのプロフィール</label>
        <span class="form-text" style="background-color:#DDDDDD;">任意</span>
      </div>
      <%= f.text_area :user_profile, class:"form-control", id:"user_profile", placeholder:"ご登録されるユーザーのプロフィールをご記載ください" %>
    </div>
  </div>
  <div class='registratoin-btn'>
    <%= f.submit "会員登録" ,class:"btn btn-danger" %>
  </div>
  <div class="user-registration-root-link"><%= link_to 'トップページ', root_path %></div>
</div>
<% end %>
