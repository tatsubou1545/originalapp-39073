<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div  class="form-group-session">
    <div class="form-group-session-box">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group-session-box">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="form-text">必須</span>
      </div>
      <%= f.password_field :password, class:"form-control", id:"password", placeholder:"半角英数字で入力してください" %>
    </div>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"btn btn-danger" %>
    <div class="user-manegiment-root-link"><%= link_to 'トップページ', root_path %></div>
  </div>
</div>
<% end %>