<%= form_with model: @post, local: true do |f|%>
  <%# render 'error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"post_title" %>
  </div>

  <div class="field">
    <%= f.label :content, "投稿内容" %><br />
    <%= f.text_area :content, class: :form__text, id:"post_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :category_id, "カテゴリー" %><br />
    <%= f.text_field :category_id, class: :form__text, id:"post_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "投稿画像" %><br />
    <%= f.file_field :image, id:"post_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
<% end %>